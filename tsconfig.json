{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "declaration": true,
    "outDir": "dist/",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types/", "./typings"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "files": ["src/index.ts"],
  "exclude": ["node_modules"]
}
